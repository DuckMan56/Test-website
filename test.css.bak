body {
    font-family: 'Comic Sans MS', 'Comic Sans', Arial ,cursive, sans-serif;
    background: #9958bf;
    text-align: center;
    padding: 20px;
}

canvas {
    background: white;
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(0,0,0,0.2);
    margin-bottom: 20px;
}

.controls {
    margin: 15px 0;
}

input {
    padding: 8px;
    width: 200px;
}

button {
    padding: 8px 12px;
    margin-left: 5px;
    cursor: pointer;
}

ul {
    list-style: none;
    padding: 0;
}

li {
    margin: 6px 0;
}
